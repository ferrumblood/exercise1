<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             alpha.disabled="0.3">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="2" radiusY="2">
		<s:fill>
			<s:SolidColor color.over="0xb9c0cb" alpha.over="1"
						  alpha="0"
						  color.down="0x98a4b6" alpha.down="1"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0x838a94" alpha="0"
								alpha.down="1" alpha.over="1"/>
		</s:stroke>
		
	</s:Rect>
    
	<s:BitmapImage source="{getStyle('icon2Display')}" verticalCenter="0"
				   horizontalCenter="0" left="3" right="3" top="3" bottom="3"/>
    
	
    <s:Label id="labelDisplay"/>
    
</s:SparkButtonSkin>
