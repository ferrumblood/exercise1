<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             xmlns:roundedBitmapImage="ui.roundedBitmapImage.*">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

	<roundedBitmapImage:RoundedBitmapImage source="@Embed('assets/skinParts/searchFieldGradient.png')" scaleMode="stretch"
										   top="0" bottom="0" left="0" right="0" cornerRadius="10"/>
	
	
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="10" radiusY="10">
		<s:stroke>
			<s:SolidColorStroke color="0x787878"/>
		</s:stroke>
	</s:Rect>
	
	
	<s:BitmapImage source="@Embed('assets/skinParts/searchIcon.png')" left="7" verticalCenter="0"/>
	
    
</s:SparkButtonSkin>
